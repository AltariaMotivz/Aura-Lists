rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }

    // Helper to check if user is accessing their own data
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }

    // Users collection
    match /users/{userId} {
      // Allow public read access (for sharing links)
      allow read: if true;
      
      // Only the user can edit their own profile (name, etc.)
      allow write: if isOwner(userId);

      // Friends subcollection: User manages their own friend list
      match /friends/{friendId} {
        allow read, write: if isOwner(userId);
      }
    }

    // Wishes collection
    match /wishes/{wishId} {
      // Allow public read access (for sharing links)
      allow read: if true;
      
      // Allow create if the 'ownerId' matches the authenticated user
      allow create: if isAuthenticated() && request.resource.data.ownerId == request.auth.uid;
      
      // Allow update if:
      // 1. User is the owner (can edit name, notes, etc.)
      // 2. User is a friend claiming the item (only updating 'claimedBy')
      allow update: if isAuthenticated() && (
        resource.data.ownerId == request.auth.uid || 
        (request.resource.data.diff(resource.data).affectedKeys().hasOnly(['claimedBy']))
      );

      // Allow delete only if user is the owner
      allow delete: if isAuthenticated() && resource.data.ownerId == request.auth.uid;
    }
  }
}
